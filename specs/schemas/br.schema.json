{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "br.schema.json",
  "type": "object",
  "required": ["id", "title", "status", "priority", "statement", "acceptance_criteria"],
  "properties": {
    "id": {"type": "string", "pattern": "^BR-\\d{4}$"},
    "title": {"type": "string", "minLength": 3},
    "status": {"type": "string", "enum": ["draft", "proposed", "approved", "implemented", "deprecated", "retired"]},
    "priority": {"type": "string", "enum": ["low", "medium", "high", "critical"]},
    "statement": {"type": "string", "minLength": 10},
    "acceptance_criteria": {"type": "array", "minItems": 1, "items": {"type": "string", "minLength": 5}},
    "notes": {"type": "string"}
  },
  "additionalProperties": true
}
