{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "bv.schema.json",
  "type": "object",
  "required": ["id", "title", "status", "owner", "priority", "description"],
  "properties": {
    "id": {"type": "string", "pattern": "^BV-\\d{4}$"},
    "title": {"type": "string", "minLength": 3},
    "status": {"type": "string", "enum": ["draft", "proposed", "approved", "implemented", "deprecated", "retired"]},
    "owner": {"type": "string", "minLength": 2},
    "priority": {"type": "string", "enum": ["low", "medium", "high", "critical"]},
    "description": {"type": "string", "minLength": 10},
    "success_metrics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["metric", "target"],
        "properties": {
          "metric": {"type": "string"},
          "target": {"type": "string"},
          "measurement": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
