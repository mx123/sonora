{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cap.schema.json",
  "type": "object",
  "required": ["id", "title", "status", "owner", "priority", "description", "acceptance_criteria"],
  "properties": {
    "id": {"type": "string", "pattern": "^CAP-\\d{4}$"},
    "title": {"type": "string", "minLength": 3},
    "status": {"type": "string", "enum": ["draft", "proposed", "approved", "implemented", "deprecated", "retired"]},
    "owner": {"type": "string", "minLength": 2},
    "priority": {"type": "string", "enum": ["low", "medium", "high", "critical"]},
    "bounded_contexts": {"type": "array", "items": {"type": "string"}},
    "description": {"type": "string", "minLength": 10},
    "acceptance_criteria": {"type": "array", "minItems": 1, "items": {"type": "string", "minLength": 5}},
    "trace": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "object",
          "properties": {
            "commands": {"type": "array", "items": {"type": "string"}},
            "events": {"type": "array", "items": {"type": "string"}}
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": true,
  "allOf": [
    {
      "if": {
        "properties": {"status": {"const": "implemented"}}
      },
      "then": {
        "required": ["trace"],
        "properties": {
          "trace": {
            "required": ["domain"],
            "properties": {
              "domain": {
                "required": ["commands", "events"],
                "properties": {
                  "commands": {"minItems": 1},
                  "events": {"minItems": 1}
                }
              }
            }
          }
        }
      }
    }
  ]
}
