{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "delta.schema.json",
  "type": "object",
  "required": ["id", "title", "status", "changes", "compatibility"],
  "properties": {
    "id": {"type": "string", "pattern": "^DELTA-\\d{4}-\\d{2}-\\d{2}-\\d{3}$"},
    "title": {"type": "string", "minLength": 3},
    "status": {"type": "string", "enum": ["draft", "proposed", "applied"]},
    "changes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type", "target"],
        "properties": {
          "type": {"type": "string", "enum": ["add", "amend", "deprecate", "supersede"]},
          "target": {"type": "string"}
        },
        "additionalProperties": true
      }
    },
    "compatibility": {
      "type": "object",
      "required": ["claim"],
      "properties": {
        "claim": {"type": "string", "enum": ["non-breaking", "breaking"]},
        "rationale": {"type": "string"}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
