{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "nfr.schema.json",
  "type": "object",
  "required": ["id", "title", "status", "category", "statement", "metric", "target", "scope"],
  "properties": {
    "id": {"type": "string", "pattern": "^NFR-\\d{4}$"},
    "title": {"type": "string", "minLength": 3},
    "status": {"type": "string", "enum": ["draft", "proposed", "approved", "implemented", "deprecated", "retired"]},
    "category": {"type": "string", "minLength": 3},
    "statement": {"type": "string", "minLength": 10},
    "metric": {"type": "string", "minLength": 1},
    "target": {"type": "string", "minLength": 1},
    "scope": {"type": "array", "minItems": 1, "items": {"type": "string", "minLength": 2}},
    "rationale": {"type": "string"}
  },
  "additionalProperties": true
}
